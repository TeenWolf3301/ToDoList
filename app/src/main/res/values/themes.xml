<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_400</item>
        <item name="colorPrimaryVariant">@color/indigo_600</item>
        <item name="colorOnPrimary">@color/alabaster</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_400</item>
        <item name="colorSecondaryVariant">@color/indigo_600</item>
        <item name="colorOnSecondary">@color/cinder</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Additional color attributes -->
        <item name="android:colorBackground">@color/alabaster</item>
        <item name="colorOnBackground">@color/cinder</item>

        <item name="colorSurface">@color/alabaster</item>
        <item name="colorOnSurface">@color/cinder</item>

        <!-- Custom attr -->
        <item name="textColorPrimary">@color/cinder</item>
        <item name="textColorSecondary">@color/french_grey</item>
        <item name="textColorTertiary">@color/mid_gray</item>

        <item name="checkmarkColor">@color/mid_gray</item>
        <item name="checkboxBorderColor">@color/alto</item>
        <item name="radiogroupBorderColor">@color/alto</item>
        <item name="checkboxGradientStartColor">@color/grey_50</item>
        <item name="checkboxGradientEndColor">@color/alabaster</item>
    </style>
</resources>