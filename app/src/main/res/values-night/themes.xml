<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryVariant">@color/chambray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo</item>
        <item name="colorSecondaryVariant">@color/indigo</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/woodsmoke</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/woodsmoke</item>

        <item name="android:textColorPrimary">@color/alto</item>
        <item name="android:textColorPrimaryInverse">@color/woodsmoke_dark</item>

        <item name="android:textColorSecondary">@color/scarpa_flow</item>

        <item name="android:textColorTertiary">@color/alto</item>

        <item name="customColorValue">@color/charade</item>
        <item name="customColorDrawableValue">@color/charade_darker</item>
    </style>
